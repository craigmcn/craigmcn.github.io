---
layout: null
---
[
{%- for post in site.posts -%}
  {%- assign category_list = "" -%}
  {%- for category in post.categories -%}
    {%- assign category_list = category_list | append:category | append:'|' -%}
  {%- endfor -%}
  {%- assign category_array = category_list | split:'|' | sort -%}
  {%- if category_array.size > 0 -%}
    {%- assign category_list = category_array | join: ', ' -%}
  {%- endif -%}

  {%- assign tag_list = "" -%}
  {%- for tag in post.tags -%}
    {%- assign tag_list = tag_list | append:tag | append:'|' -%}
  {%- endfor -%}
  {%- assign tag_array = tag_list | split:'|' | sort -%}
  {%- if tag_array.size > 0 -%}
    {%- assign tag_list = tag_array | join: ', ' -%}
  {%- endif -%}

  {
    "url": "{{ post.url | prepend: site.baseurl }}",
    "title": "{{ post.title }}",
    "excerpt": "{{ post.excerpt }}",
    "categories": "{{ category_list }}",
    "tags": "{{ tag_list }}"
  }{%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}
]
